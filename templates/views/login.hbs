    <link rel="stylesheet" href="css/style.css">

</head>
<body>
    {{>navbar}}
{{#if message }}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        
        {{message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
{{/if}}
{{#if note}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{note}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
  {{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
      <input id="tab-2" type="radio" name="tab" class="sign-up" id="signUp"><label for="tab-2" class="tab">Sign
        Up</label>
      <div class="login-form">
        <div class="sign-in-htm">
          <form action="/" method="POST">
            <div class="group">
              <label for="user" class="label">E-mail</label>
              <input id="user" type="text" class="input" name="email">
            </div>
            <div class="group">
              <label for="pass" class="label">Password</label>
              <input id="pass" type="password" class="input" data-type="password" name="password">
            </div>
            <div class="group">
              <label for="role" class="label">Role</label>
              <select name="role" id="role" class="input" style="background-color:rgb(69 81 114)">
                <option value="user">User</option>
                <option value="admin">Admin</option>
              </select>
            </div>
            <div class="group">
              <input type="submit" class="button" value="Sign In">
            </div>
          </form>
          <div class="hr"></div>
          <div class="foot-lnk">
              <a href="/forgotpassword">Forgot Password?</a>
              <br><br>
              <label for="tab-2">Create Account</label>
          </div>
        </div>
        <div class="sign-up-htm">
          <form action="/register" method="POST">
          <div class="row">
          <div class="col">
            <div class="group">
              <label for="fname" class="label">Firstname</label>
              <input id="fname" type="text" class="input" name="firstname">
            </div>
            </div>
             <div class="col">
            <div class="group">
              <label for="lname" class="label">Lastname</label>
              <input id="lname" type="text" class="input" name="lastname">
            </div>
            </div>
            </div>
            <div class="group">
              <label for="email" class="label">Email Address</label>
              <input id="email" type="text" class="input" name="email">
            </div>
            <div class="group">
              <label for="phone" class="label" name="phone">Phone</label>
              <input id="phone" type="number" class="input" name="phone">
            </div>
            <div class="group">
              <label class="label">Role</label>
              <select id="role" class="input" name="role" style="background-color:rgb(69 81 114)">
                <option value="user">User</option>
                <option value="admin">Admin</option>
              </select>
            </div>
            <div class="row">
              <div class="col">
            <div class="group">
              <label for="rspass" class="label">Password</label>
              <input id="rspass" type="password" class="input" data-type="password" name="password">
            </div>
            </div>
            <div class="col">
            <div class="group">
              <label for="cpass" class="label">Confirm Password</label>
              <input id="cpass" type="password" class="input" data-type="password" name="confirmpassword">
            </div>
            </div>
            </div>
            <div class="group">
              <input type="submit" class="button" value="Sign Up">
            </div>
            <div class="foot-lnk">
              <label for="tab-1">Already Member?</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"></script>
</body>

</html>